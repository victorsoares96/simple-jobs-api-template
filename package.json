{
  "name": "simple-jobs-api-template",
  "version": "0.0.1",
  "templateVersion": "1.0.0",
  "description": "A template for simple api madded for handle jobs using agenda",
  "type": "commonjs",
  "config": {
    "commitizen": {
      "path": "./node_modules/commitizen-emoji"
    },
    "commitizenEmoji": {
      "conventionalFormat": true
    }
  },
  "engines": {
    "node": ">=18.x.x <=19.x.x",
    "npm": "not allowed in this project",
    "yarn": ">=1.22.x <=2.x.x"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "cross-env DEBUG=http NODE_ENV=development ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/app.local",
    "prod": "cross-env DEBUG=http NODE_ENV=production node dist/app.local",
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "postbuild": "npm pkg set scripts.scriptname='true' && cp -R package*json dist/ && cp -R src/environments dist/ && cp -R logs dist/ && npm pkg set scripts.scriptname='husky install'",
    "test": "cross-env NODE_ENV=development jest --watch --detectOpenHandles",
    "test:coverage": "cross-env NODE_ENV=development jest --coverage",
    "prettier:format": "prettier --write .",
    "lint": "eslint ./src/ --ext .ts",
    "lint:fix": "eslint --fix ./src/ --ext .ts",
    "type-check": "tsc -p tsconfig.build.json --noEmit --pretty",
    "scriptname": "husky install"
  },
  "license": "MIT",
  "dependencies": {
    "agenda": "5.0.0",
    "axios": "1.2.2",
    "bcryptjs": "2.4.3",
    "body-parser": "1.20.1",
    "celebrate": "15.0.1",
    "class-validator": "0.14.0",
    "compression": "1.7.4",
    "config": "3.3.8",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "escape-html": "1.0.3",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "tslib": "2.4.1",
    "winston": "3.8.2",
    "winston-loki": "6.0.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/compression": "1.7.2",
    "@types/config": "3.3.0",
    "@types/cors": "2.8.13",
    "@types/escape-html": "1.0.2",
    "@types/express": "4.17.15",
    "@types/jest": "29.2.5",
    "@types/jsonwebtoken": "9.0.1",
    "@types/node": "18.11.18",
    "@types/supertest": "2.0.12",
    "@types/validator": "13.11.9",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "babel-plugin-module-resolver": "5.0.0",
    "babel-plugin-transform-typescript-metadata": "0.3.2",
    "commitizen": "4.2.6",
    "commitizen-emoji": "1.0.5",
    "cross-env": "7.0.3",
    "eslint": "8.31.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.4",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "jest": "29.3.1",
    "lint-staged": "13.1.0",
    "mongodb-memory-server": "^8.11.4",
    "prettier": "2.8.3",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tsc-alias": "1.8.2",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.4"
  }
}
